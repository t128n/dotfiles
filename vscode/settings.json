{
    // ========== Visuals ==========
    // Window chrome and workbench layout
    "window.menuStyle": "custom",
    "window.dialogStyle": "custom",
    "window.commandCenter": false,
    "window.zoomLevel": 0,
    "window.newWindowDimensions": "inherit",
    "window.autoDetectColorScheme": true,
    "workbench.activityBar.location": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.panel.defaultLocation": "bottom",
    "workbench.panel.opensMaximized": "never",
    "workbench.panel.showLabels": false,
    // Startup & tips
    "workbench.startupEditor": "readme",
    "workbench.tips.enabled": false,
    "workbench.enableExperiments": true,
    // Tabs and editor chrome
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // Avoids accidental hover close targets in tabs
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.pinnedTabSizing": "compact",
    // Lists and trees
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 12,
    "workbench.tree.expandMode": "singleClick",
    "workbench.tree.renderIndentGuides": "none",
    // Explorer behavior
    "explorer.autoReveal": false,
    "explorer.compactFolders": true,
    "explorer.openEditors.visible": 1,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Fonts & rendering polish
    "workbench.fontAliasing": "antialiased",
    "breadcrumbs.enabled": false,
    // Git/SCM decorations kept minimal in UI
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",
    "scm.diffDecorationsGutterAction": "none",
    // ========== Editor ==========
    // Core editor feel
    "editor.fontFamily": "Google Sans Code, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 1.4,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.lineNumbers": "interval",
    "editor.wordWrap": "off",
    "editor.rulers": [],
    // Padding and highlighting
    "editor.padding.top": 14,
    "editor.padding.bottom": 14,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    // Minimap and guides
    "editor.minimap.enabled": false,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.highlightActiveBracketPair": true,
    // Brackets, quotes, matching & linking
    "editor.matchBrackets": "near",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.linkedEditing": true,
    // Scrolling
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.horizontalScrollbarSize": 0,
    // Inlay hints provide lightweight parameter/type context inline
    "editor.inlayHints.enabled": "on",
    // Fold/overview/UX declutter
    "editor.folding": false,
    "editor.foldingHighlight": false,
    "editor.showFoldingControls": "never",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.lightbulb.enabled": "off",
    "editor.occurrencesHighlight": "off",
    "editor.glyphMargin": false,
    // Suggestions & IntelliSense
    "editor.suggest.showIcons": false,
    "editor.suggest.showWords": false,
    "editor.suggest.showSnippets": true,
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "inline",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    // Treat common punctuation as separators to bias word-based suggestions less
    "editor.wordSeparators": "`~!@#%^&*()=+[{}]\\|;:'\",.<>/?",
    // Go to definition/reference behavior: jump directly when multiple are found
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    // Formatting & code actions
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    // ========== Global Settings ==========
    // File hygiene
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.enableTrash": false,
    // Project noise reduction
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.next": true,
        "**/.svn": true,
        "**/Thumbs.db": true,
        "**/build": true,
        "**/dist": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.next": true,
        "**/.svn": true,
        "**/Thumbs.db": true,
        "**/*.code-search": true,
        "**/bower_components": true,
        "**/build": true,
        "**/dist": true,
        "**/node_modules": true
    },
    "search.useIgnoreFiles": true,
    "search.followSymlinks": false,
    // Telemetry & privacy
    "telemetry.telemetryLevel": "off",
    // Extensions UX
    "extensions.ignoreRecommendations": true,
    "extensions.closeExtensionDetailsOnViewChange": true,
    // Problems/Debug
    "problems.autoReveal": false,
    "debug.openDebug": "neverOpen",
    "debug.console.closeOnEnd": true,
    // Terminal (integrated)
    "terminal.explorerKind": "integrated",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.fontFamily": "Google Sans Code, monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.letterSpacing": 0.5,
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.rescaleOverlappingGlyphs": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "outline",
    "terminal.integrated.cursorBlinking": true,
    // Tabs & layout
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.location": "right",
    "terminal.integrated.tabs.hideCondition": "singleTerminal",
    "terminal.integrated.tabs.showActiveTerminal": "singleTerminalOrNarrow",
    "terminal.integrated.tabs.showActions": "singleTerminalOrNarrow",
    "terminal.integrated.tabs.title": "${process}",
    "terminal.integrated.tabs.description": "",
    "terminal.integrated.tabs.separator": "",
    "terminal.integrated.tabs.enableAnimation": false,
    // Behavior & persistence
    "terminal.integrated.enablePersistentSessions": true,
    "terminal.integrated.persistentSessionScrollback": 1000,
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.fastScrollSensitivity": 5,
    "terminal.integrated.hideOnStartup": "whenEmpty",
    "terminal.integrated.hideOnLastClosed": true,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.detectLocale": "auto",
    // Safety/alerts
    "accessibility.signals.terminalBell": {
        "announcement": "off",
        "sound": "off"
    },
    "terminal.integrated.bellDuration": 0,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.confirmOnExit": "never",
    "terminal.integrated.confirmOnKill": "never",
    "terminal.integrated.showExitAlert": false,
    // Keyboard nuances in terminal (keeps chords/mnemonics from stealing focus)
    "terminal.integrated.allowChords": false,
    "terminal.integrated.allowMnemonics": false,
    // Git
    "git.openRepositoryInParentFolders": "always"
}
